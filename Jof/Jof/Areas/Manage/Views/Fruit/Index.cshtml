@model List<Fruit>
@{
    int count = 0;
}

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">Fruit</th>
            <th scope="col">Id</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">SubTitle</th>
            <th scope="col" width="200px"><div><a class="btn btn-primary" style="margin-left:25px;" asp-controller="Fruit" asp-action="Create">Create</a></div></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Id</td>
                <td><div style="width:200px;height:200px;"><img style="width:100%;height:100%;" src="~/Upload/Images/@item.ImgUrl" /></div></td>
                    <td>@item.Title</td>
                    <td>@item.SubTitle</td>
                    <td>
                    <a class="btn btn-danger " asp-controller="Fruit" asp-action="Delete" asp-route-id="@item.Id">Delete </a>
                    <a class="btn btn-warning " asp-controller="Fruit" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                </tr>
        }
    </tbody>
</table>